{% extends 'base.html.twig' %}

{% block title %}DigitalProjects index{% endblock %}

{% block body %}
    <h1>DigitalProjects index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProjectName</th>
                <th>Picture</th>
                <th>Abstract</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for digital_project in digital_projects %}
            <tr>
                <td>{{ digital_project.id }}</td>
                <td>{{ digital_project.projectName }}</td>
                <td>{{ digital_project.picture }}</td>
                <td>{{ digital_project.abstract }}</td>
                <td>
                    <a href="{{ path('digital_projects_show', {'id': digital_project.id}) }}">show</a>
                    <a href="{{ path('digital_projects_edit', {'id': digital_project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('digital_projects_new') }}">Create new</a>
{% endblock %}
